<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Liquidação</title>
    <%- include('../views/head'); %>
</head>
<body>
    <%- include('../views/nav'); %>
    <div class="text-center pt-4">

        <p class="lead">Confira abaixo os dados da liquidação</p>
    </div>
    <table class="table table-hover" style="margin: 0 auto; width: 70%;">
        <thead class="table-dark">    
            <tr>
                <th style="width: 30%">Opção</th>
                <th style="width: 30%">CNPJ</th>
                <th style="width: 30%">Valor NF</th>
                <th style="width: 30%">Empenho</th>
                <th style="width: 30%">Subitem</th>
            </tr>
        </thead>
        <tbody>
            <tr>    
                <td><%- opcao %></td>
                <td><%- cnpj %></td>
                <td><%- valorBruto %></td>
                <td><%- empenho %></td>
                <td><%- subitem %></td>
            </tr>
        </tbody>
    </table>

    <table class="table table-hover" style="margin: 0 auto; width: 70%;">
        <thead class="table-dark">    
            <tr>
                <th style="width: 30%">Descrição</th>
            </tr>
        </thead>
        <tbody>
            <tr>    
                <td><%- descricao %></td>
            </tr>
        </tbody>
    </table>
    <div  class="text-center">
    <a href="/cadastro" class="btn btn-outline-secondary" style="margin-top: 10px; margin-bottom: 10px;">Incluir livro</a>
    
    <a href="/edicao/" class="btn btn-outline-secondary" style="margin-top: 10px; margin-bottom: 10px;">Editar registro</a>
    
    <a href="/exclusao" class="btn btn-outline-danger" style="margin-top: 10px; margin-bottom: 10px;">Excluir registro</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<footer>
    <%- include('../views/footer'); %>
</footer>
</body>
</html>